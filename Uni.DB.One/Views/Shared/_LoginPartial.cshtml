@using Microsoft.AspNetCore.Identity
@using Uni.DB.One.DataAccess

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<div class="user pt-20">
    @if (SignInManager.IsSignedIn(User))
    {
        <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a asp-controller="User" asp-action="Index" title="Manage"><u>@(UserDb.GetUser((await UserManager.GetUserAsync(User))).Name)</u></a>
                </li>
                <li>
                    <button type="submit" class="btn btn-link navbar-btn navbar-link">Попрощаться</button>
                </li>
            </ul>
        </form>
    }
    else
    {
        <ul class="nav navbar-nav navbar-right">
            <li><a asp-area="Identity" asp-page="/Account/Register">Новый судар(ъ/ыня)</a></li>
            <li><a asp-area="Identity" asp-page="/Account/Login">Представиться</a></li>
        </ul>
    }
</div>
