@model ShoppingCart

<div class="cart-main-area ptb-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h1 class="cart-heading">Корзина</h1>
                <form action="@Url.Action("RemoveGameFromCart","Home",new {gotocart = true })" method="post" id="shopCartForm">
                    <div class="table-content table-responsive">
                        <table>
                            <thead>
                                <tr>
                                    <th class="product-price"></th>
                                    <th class="product-name">Название</th>
                                    <th class="product-price">Цена</th>
                                    <th class="product-name">Удалить</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td class="product-thumbnail">
                                            <a href="#"><img src="@item.PathThumbnail" alt=""></a>
                                        </td>
                                        <td class="product-name"><a href="#">@item.Name</a></td>
                                        <td class="product-price"><span class="amount">@item.Price руб.</span></td>
                                        <td class="product-remove">
                                            @*<a href="#" onclick="shopCartForm.submit({id: @item.Id.ToString()});"><i class="fa fa-times"></i></a>*@
                                            <button name="id" value="@item.Id.ToString()"><i class="pe-7s-close-circle"></i></button>
                                        </td>
                                    </tr>
                                }
                                <tr>
                                    <td class="product-thumbnail"></td>
                                    <td class="product-name"></td>
                                    <td class="product-price"><span class="amount">@Model.Items.Sum(x => x.Price) руб.</span></td>
                                    <td class="product-remove"></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </form>
                <form action="@Url.Action("CartCheckout","Home")" method="post">
                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="coupon-all">
                                <div class="coupon">

                                </div>
                                <div class="coupon2">
                                    <input class="button" name="update_cart" value="Оплатить" type="submit">
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>